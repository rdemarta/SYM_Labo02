<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.AsynchonousActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:text="@string/asynchonous_received_data"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/asynchronous_tvDataReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Received data"
                android:textSize="16sp"/>

        </ScrollView>

    </LinearLayout>

    <!-- INFINITE PROGRESS BAR (Loader) with 80% black background -->
    <RelativeLayout
        android:id="@+id/asynchronous_layoutLoader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:alpha="0.8"
        android:visibility="gone"/>
    <ProgressBar
        android:id="@+id/asynchronous_loader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/colorPrimary"
        style="@android:style/Widget.Holo.Light.ProgressBar.Large"
        android:visibility="gone"/>

</RelativeLayout>